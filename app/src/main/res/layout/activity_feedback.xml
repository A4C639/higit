<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_aty_thing_top"
        android:background="#339999"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_aty_feedback_back"
            android:background="@drawable/my_app_theme_click_ripple_bg"
            android:clickable="true"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_back_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#fff"
            android:textSize="15dp"
            android:text="用户反馈"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/rv_aty_feedback"
        android:layout_width="match_parent"
        android:layout_height="0dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/bg_index_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:background="#ffffff"
            android:id="@+id/edt_aty_feedback"
            android:padding="10dp"
            android:layout_weight="5"
            android:hint="请输入..."
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:clickable="true"
            android:id="@+id/iv_aty_feedback_send"
            android:background="@drawable/aty_feedback_send_bg"
            android:padding="5dp"
            android:src="@mipmap/ic_send_normal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>