<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/rl_aty_thing_top"
        android:background="#339999"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/iv_aty_comment_back"
            android:background="@drawable/my_app_theme_click_ripple_bg"
            android:clickable="true"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_back_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="15dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:text="发表评论"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_aty_comment_send"
            android:background="@drawable/normal_click_bg"
            android:clickable="true"
            android:padding="15dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="#c0c0c0"
            android:textSize="15dp"
            android:text="发布"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/bg_index_left_item"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <EditText
            android:background="#dcfcfbfb"
            android:padding="20dp"
            android:gravity="start"
            android:hint="发表你的评价..."
            android:id="@+id/edt_aty_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>




</LinearLayout>