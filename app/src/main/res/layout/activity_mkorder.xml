<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_aty_mkorder_parent">
    <RelativeLayout
        android:id="@+id/rl_aty_thing_top"
        android:background="#339999"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_aty_mkorder_back"
            android:background="@drawable/my_app_theme_click_ripple_bg"
            android:clickable="true"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_back_normal"
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="#fff"
            android:textSize="15dp"
            android:text="确认订单"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_aty_mkorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>




        <RelativeLayout
            android:background="@drawable/shadow_top"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_toLeftOf="@+id/tv_aty_mkorder_total"
                android:text="总价:"
                android:layout_centerInParent="true"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#a63939"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_centerInParent="true"
                android:id="@+id/tv_aty_mkorder_total"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:clickable="true"
                android:textColor="#fff"
                android:background="@drawable/normal_click_bg"
                android:gravity="center"
                android:textSize="15sp"
                android:text="提交"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/tv_aty_mkorder_submit" />
        </RelativeLayout>





</LinearLayout>