<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">


          <LinearLayout
              android:background="#339999"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="40dp">
              <TextView
                  android:textColor="#fff"
                  android:gravity="center"
                  android:text="物品"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
              <TextView
                  android:textColor="#fff"
                  android:gravity="center"
                  android:text="洗护周期"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
              <TextView
                  android:textColor="#fff"
                  android:text="价格"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
          </LinearLayout>
          <View
              android:background="#339999"
              android:layout_width="match_parent"
              android:layout_height="0.5dp"></View>

          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="30dp">
              <TextView
                  android:gravity="center"
                  android:text="围巾"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
              <TextView
                  android:gravity="center"
                  android:text="2天"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
              <TextView
                  android:text="10元"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
          </LinearLayout>
          <View
              android:background="#339999"
              android:layout_width="match_parent"
              android:layout_height="0.5dp"></View>

          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="30dp">
              <TextView
                  android:gravity="center"
                  android:text="帽子"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
              <TextView
                  android:gravity="center"
                  android:text="2天"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
              <TextView
                  android:text="10元"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
          </LinearLayout>
          <View
              android:background="#339999"
              android:layout_width="match_parent"
              android:layout_height="0.5dp"></View>
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="30dp">
              <TextView
                  android:gravity="center"
                  android:text="手套"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
              <TextView
                  android:gravity="center"
                  android:text="2天"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
              <TextView
                  android:text="5元"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
          </LinearLayout>
          <View
              android:background="#339999"
              android:layout_width="match_parent"
              android:layout_height="0.5dp"></View>
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="30dp">
              <TextView
                  android:gravity="center"
                  android:text="披肩"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
              <TextView
                  android:gravity="center"
                  android:text="2天"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
              <TextView
                  android:text="9元"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
          </LinearLayout>
          <View
              android:background="#339999"
              android:layout_width="match_parent"
              android:layout_height="0.5dp"></View>
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="30dp">
              <TextView
                  android:gravity="center"
                  android:text="领带"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
              <TextView
                  android:gravity="center"
                  android:text="2天"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
              <TextView
                  android:text="12元"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" />
          </LinearLayout>


      </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>