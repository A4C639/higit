<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_aty_thing_top"
        android:background="#339999"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_aty_edit_addr_back"
            android:background="@drawable/my_app_theme_click_ripple_bg"
            android:clickable="true"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_back_normal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="#fff"
            android:textSize="15dp"
            android:text="编辑地址"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>




        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ListView
                android:id="@+id/lv_aty_addr_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>



    <TextView
        android:id="@+id/tv_aty_addr_edit_newaddr"
        android:textColor="#fff"
        android:background="@drawable/normal_click_bg"
        android:textSize="18dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="新增地址"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>