            />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:clickable="true"
                    android:padding="20dp"
                    android:background="@drawable/normal_white_grery_bg"
                    android:gravity="center"
                    android:text="裤裙"
                    android:drawableRight="@mipmap/bottom"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:id="@+id/tv_frg_index_bottom" />

                <View
                    android:layout_marginTop="1dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#f9f9f9"
                    />
                <TextView
                    android:id="@+id/tv_frg_index_shoes"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:clickable="true"
                    android:padding="20dp"
                    android:background="@drawable/normal_white_grery_bg"
                    android:gravity="center"
                    android:text="鞋子"
                    android:drawableRight="@mipmap/shoes"
                    android:layout_width="0dp"
                    android:layout_height="100dp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9f9f9"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_frg_index_top"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:clickable="true"
                    android:padding="20dp"
                    android:background="@drawable/normal_rapple"
                    android:gravity="center"
                    android:text="衣服"
                    android:drawableRight="@mipmap/outer"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    />
                <View
                    android:layout_marginBottom="1dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#f9f9f9"
                    />
                <TextView
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:clickable="true"
                    android:padding="20dp"
                    android:background="@drawable/normal_rapple"
                    android:gravity="center"
                    android:text="其他"
                    android:drawableRight="@mipmap/other"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:id="@+id/tv_frg_index_accessory" />
            </LinearLayout>

