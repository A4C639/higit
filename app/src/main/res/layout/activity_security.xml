<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_aty_thing_top"
        android:background="#339999"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_aty_security_back"
            android:background="@drawable/my_app_theme_click_ripple_bg"
            android:clickable="true"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_back_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#fff"
            android:textSize="15dp"
            android:text="安全中心"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_aty_security_edit_pass"
        android:layout_marginTop="20dp"
        style="@style/drawer_left_item"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            style="@style/drawer_left_textview"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:drawableLeft="@mipmap/ic_lock_open_normal"
            android:text="密码修改"
            />
    </RelativeLayout>

</LinearLayout>