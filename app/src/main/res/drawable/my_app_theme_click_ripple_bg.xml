<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
     android:radius="40dp">


    <item android:state_pressed="true">

        <shape>
            <solid  android:color="@color/my_app_pressed_theme_deep"></solid>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid  android:drawable="@color/my_app_pressed_theme_light"></solid>
        </shape>

    </item>

</selector>